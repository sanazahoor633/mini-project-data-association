<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- <link rel="stylesheet" href="/stylesheets/style.css"> -->
    <title>Document</title>
</head>
<body>
<div class="w-full min-h-screen bg-zinc-900 text-white p-8">
  <div class="w-full  flex justify-end">
     <a class="px-3 py-2 bg-red-500 text-white rounded-md inline-block" href="/logout">Logout</a>
  </div>
 <div class="flex items-center gap-4 mb-4">
  <div class="w-20 h-20  rounded-md overflow-hidden">

    <img class="w-full h-full object-center object-cover" src="/images/uploads/<%= user.profilePicture %>" alt="">
  </div>
<h3 class="text-4xl font-semibold ">hello <%= user.username %></h3>
</div>

  <h5>You can create a new post</h5>
  <form action="/post" method="post">
    <textarea name="content" placeholder="whats on your mind " class="block p-2 w-1/2 resize-none outline-none bg-transparent border-2 border-zinc-500 rounded-md mt-4"></textarea>
    <input class="bg-blue-950 w-40 rounded px-4 py-2 block mt-4" type="submit" value="Create new post">
  </form>
  <div class="posts mt-20 ">
    <h3 class="text-2xl text-zinc-400">your posts</h3>
    <div class="postcontainer mt-4  flex gap-2 flex-col">

      <% user.posts.reverse().forEach((post)=>{ %>
 <div class="post w-1/2 p-4 border-2 border-zinc-700 bg-zinc-800">
  <h4 class="text-blue-500 mb-3"> <%= user.username %> </h4>
  <p class="tracking-tighter"> <%= post.content %> </p>
  <a href=""><%= post.likes.length %>Likes</a>
  <div class="btns flex gap-4 mt-4">
    <a class="text-blue-500" href="/like/<%=post._id%>">
      <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %>
    </a>
    <a class="text-zinc-400" href="/edit/<%= post._id %>">Edit</a>
  </div>
</div> 

     <% }) %>


    </div>
  </div>
</div>
</body>
</html>